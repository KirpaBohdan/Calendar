@{
    Layout = "_Layout";
}

<ul>
        @foreach (var t in ViewBag.TaskData)
        {
            <li>@t.Date.Hour : @t.Date.Minute - @t.Value
                <a href="~/Home/Delete?id=@t.Id&y=@t.Date.Year&m=@t.Date.Month&d=@t.Date.Day">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                        <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"></path>
                    </svg>
                </a>
            </li>
        }
    </ul>
<form class="form-inline" method="post">
    <input type="hidden" value="@ViewBag.Year" name="y" />
    <input type="hidden" value="@ViewBag.Month" name="m" />
    <input type="hidden" value="@ViewBag.Day" name="d" />

    <select name="h">
        @for (int i = 0; i < 24; i++)
            @Html.Raw("<option>" + i + "</option>");
    </select>

    <select name="min">
        @for (int i = 0; i < 60; i++)
            @Html.Raw("<option>" + i + "</option>");
    </select>

    <input type="text" name="text">

    <button type="submit" class="btn btn-primary mb-2">Додати</button>
</form>
